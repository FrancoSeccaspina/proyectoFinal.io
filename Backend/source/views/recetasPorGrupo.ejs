        <link rel="stylesheet" href="/css/footer.css">
    </head>

    <body>
        <%- include('./partials/header.ejs') %>

        <ul>
            <% recetas.forEach(receta=> { %>
                <li>
                    <h2>
                        <%= receta.nombre %>
                    </h2>
                    <p>
